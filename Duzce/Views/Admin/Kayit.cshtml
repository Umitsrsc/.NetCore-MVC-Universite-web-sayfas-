@using Duzce.Models.DataBase
@model Giris

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
                    <form asp-action="Kayit" asp-controller="Admin" method="post">

                        <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <a href="index.html" class="">
                                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>Düzce Üniversitesi</h3>
                                </a>
                                <h3>Kayıt Ol</h3>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" asp-for="Adi" placeholder="Adınız">
                                <label for="floatingText">Adınız</label>
                            </div>   <div class="form-floating mb-3">
                                <input type="text" class="form-control" asp-for="Soyadi" placeholder="Soyadınız">
                                <label for="floatingText">Soyadınız</label>
                            </div>
                         
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control" asp-for="Sifre" placeholder="Password">
                                <label for="floatingPassword">Şifre</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-4">
                              
                            </div>
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Kayıt Ol</button>




                        </div>
                    </form>
